generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
}

model User {
  id       String @id @unique
  name     String?
  email    String @unique
  password String?
  role     String
  avatar String?
  client_id String?
  is_manager Boolean?
  token    String?

  client Client? @relation(fields: [client_id], references: [id])
}

model Email {
  id       String @id @unique
  name     String
  from    String
  to String[]
  subject String
  html     String
  replyed String?
  has_reply Boolean?
  created_at DateTime
}

model Client {
  id String @id @unique
  company String
  logotipo String?
  cpf String?
  cnpj String?

  users User[]
  projects Project[]
}

model Project {
  id String @id @unique
  client_id String?
	name String
	description String?
	status String?
	due DateTime

  tasks Task[]
  client Client? @relation(fields: [client_id], references: [id])
}

model Task {
  id String @id @unique
  project_id String?
	name String
	description String?
	status String?

  project Project? @relation(fields: [project_id], references: [id])
}